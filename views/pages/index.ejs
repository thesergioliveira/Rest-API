      <%- include("../partials/nav");%>
    </header>
    <div class="data-container">
      <%if(data.length) {%>
      <table>
        <thead>
          <th>username</th>
          <th>age</th>
          <th>toolStack</th>
        </thead>
        <tbody>
          <% for(let i = 0; i < data.length; i++){%>
          <tr>
            <td><%=data[i].username%></td>
            <td><%=data[i].age%></td>
            <td><%data[i].toolStack%></td>
          </tr>
          <%}%>
        </tbody>
      </table>
      <%}%>
    </div>
    <footer><%- include("../partials/footer");%></footer>
